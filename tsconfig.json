{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "type-shift": ["src/index.ts"],
      "*": ["node_modules/*", "types/*"]
    },
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
